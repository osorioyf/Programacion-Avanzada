abstract class Vehiculo {
    abstract void acelerar();
}

final class Motocicleta extends Vehiculo {
    private int velocidad = 0;

    void acelerar() {
        velocidad += 5;
    }

    int getVelocidad() {
        return velocidad;
    }
}
final class Automovil extends Vehiculo {
    private int velocidad = 0;

    void acelerar() {
        velocidad += 10;
    }

    int getVelocidad() {
        return velocidad;
    }
}


public class EjemploHerencia {
    public static void main(String[] args) {
        Automovil auto = new Automovil();
        Motocicleta moto = new Motocicleta();

        auto.acelerar();
        auto.acelerar();
        moto.acelerar();

        System.out.println("Velocidad del autom√≥vil: " + auto.getVelocidad() + " km/h");
        System.out.println("Velocidad de la motocicleta: " + moto.getVelocidad() + " km/h");
    }
}
